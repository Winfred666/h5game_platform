generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma" // just generate into node modules.
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// schema.prisma
model Game {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  isOnline    Boolean  
  width       Int?
  height      Int?
  description String?
  isPrivate   Boolean  @default(true) @map("is_private")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  size        BigInt   @default(0)
  views       BigInt   @default(0)
  downloads   BigInt   @default(0)

  // --- RELATIONAL FIELDS ---
  // tags is like "a,b,c"
  tags        String  
  // Replaces `author_ids`: a game can have many authors (users).
  authors     User[]

  @@map("games")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique

  // ... other user fields like password, etc.
  // A user can be the author of many games.
  games Game[]

  @@map("users")
}

// only for select.
model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique // e.g., "Action", "Puzzle", "RPG"

  @@map("tags")
}
